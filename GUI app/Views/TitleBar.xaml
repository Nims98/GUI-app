<UserControl x:Class="GUI_app.Views.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_app.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">
    <Grid Height="100">
        <Border Height="100" Background="Transparent" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource closeBtn}"  HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" Width="25" Height="25" Click="MinimizeWindow" Margin="0 5 5 0">
                <Image  Source="pack://application:,,,/Images/minimize.png"  VerticalAlignment="Top" Height="15" HorizontalAlignment="Center" />
            </Button>
                <Button Style="{StaticResource closeBtn}"  HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" Width="25" Height="25" Click="CloseWindow" Margin="0 5 5 0">
                    <Image  Source="pack://application:,,,/Images/close.png"  VerticalAlignment="Top" Height="15" HorizontalAlignment="Center" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
