<Window x:Class="GUI_app.Views.CustomMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_app.Views"
        mc:Ignorable="d"
         WindowStyle="None"
        MouseDown="DragWindow"
        FontSize="14"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="CustomMsgBox" Height="130" Width="300">
    <Border Background="#151720" CornerRadius="8">
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="Message" Grid.Row="0" Margin="0 33 0 0" Text="Thank you for your Information, We will take action accordingly" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                <Button Name="msgBtn" Margin="0 21 0 0" Grid.Row="1" Content="Ok" Height="30" Width="80" Click="msgBtn_Click"></Button>
            </Grid>            
        </StackPanel>
    </Border>
</Window>
